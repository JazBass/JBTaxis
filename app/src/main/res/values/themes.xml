<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JBTaxis" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="full_screen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Button" parent="full_screen">
        <item name="android:textColor">@color/taxi_light</item>
        <item name="android:background">@color/shade</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Tittle" parent="full_screen">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SubTittle" parent="full_screen">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/taxi_light</item>
    </style>
    <style name="Footer" parent="full_screen">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/taxi_dark</item>
    </style>
    <style name="Normal" parent="full_screen">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>